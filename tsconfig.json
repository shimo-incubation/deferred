{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es5",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "outDir": "./lib"
  },
  "include": ["./src/**/*"]
}
